<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.abdotareq.subwaye_ticketting">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:name=".utility.ApplicationController"
        android:supportsRtl="true"
        android:theme="@style/AppThemeNoActionBar">
        <activity android:name=".ui.activity.registration.ChangePassActivity"
            />
        <activity android:name=".ui.activity.registration.VerificationActivity" />
        <activity android:name=".ui.activity.registration.ForgetPassActivity" />
        <activity android:name=".ui.activity.HomeLandActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".ui.activity.registration.SignUpActivity" />
        <activity android:name=".ui.activity.registration.SignInActivity" />
        <activity android:name=".ui.activity.SplashScreenActivity"
           >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>