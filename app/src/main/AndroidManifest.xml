<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.abdotareq.subway_e_ticketing" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".utility.ApplicationController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeNoActionBar" >
        <activity android:name="com.abdotareq.subway_e_ticketing.controller.fragment.registration.RecoverPassActivity" >
        </activity>
        <activity android:name=".controller.fragment.registration.ChangePassFragment" />
        <activity android:name=".controller.fragment.registration.VerificationFragment" />
        <activity android:name=".controller.fragment.registration.ForgetPassFragment" />
        <activity android:name=".controller.activity.HomeLandActivity" />
        <activity android:name=".controller.activity.RegisterActivity" />
        <activity android:name="com.abdotareq.subway_e_ticketing.controller.fragment.registration.SignUpFragment" />
        <activity android:name="com.abdotareq.subway_e_ticketing.controller.fragment.registration.SignInFragment" />
        <activity android:name=".controller.activity.SplashScreenActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>