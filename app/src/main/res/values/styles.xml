<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="android:fontFamily">@font/segoe_ui</item>
        <item name="fontFamily">@font/segoe_ui</item>
        <item name="textAppearanceHeadline6">@style/CustomHeadline5</item>
        <item name="textAppearanceHeadline4">@style/CustomHeadline4</item>
        <item name="textAppearanceHeadline3">@style/CustomHeadline3</item>
    </style>

    // smaller is text larger

    <style name="CustomHeadline6" parent="TextAppearance.MaterialComponents.Headline6" />

    <style name="CustomHeadline5" parent="TextAppearance.MaterialComponents.Headline5" />

    <style name="CustomHeadline4" parent="TextAppearance.MaterialComponents.Headline4" />

    <style name="CustomHeadline3" parent="TextAppearance.MaterialComponents.Headline3" />

    <style name="ProgressDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/secondaryColor</item>
        <!--        <item name="android:textColorPrimary">@color/white</item>-->
    </style>

    <style name="EditTStyle">

    </style>


    <style name="ChangePassStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

    </style>


    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

    </style>


    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">

        <item name="android:textAppearance">@style/CustomHeadline6</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="textAllCaps">false</item>

    </style>

    <style name="TextViewStyle" parent="Widget.MaterialComponents.TextView">

        <item name="android:textAppearance">@style/CustomHeadline6</item>

    </style>

    <style name="ButtonStyleTicketHelper" parent="Widget.MaterialComponents.Button.OutlinedButton">

        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/primaryColor</item>
        <item name="textAllCaps">false</item>

    </style>


    <style name="CardStyle" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/primaryColor</item>
    </style>

    <style name="RegisterTextHeadLine">
        <item name="android:layout_marginTop">@dimen/large_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/CustomHeadline3</item>
    </style>


</resources>
